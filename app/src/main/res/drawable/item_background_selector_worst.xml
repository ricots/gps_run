<selector xmlns:android="http://schemas.android.com/apk/res/android" android:enterFadeDuration="@android:integer/config_longAnimTime">
    <item android:state_activated="true">
        <shape>
            <solid android:color="@color/itemBorder"/>
            <stroke
                android:width="1.5dp"
                android:color="@color/itemBorder"/>
            <padding
                android:bottom="5dp"
                android:left="5dp"
                android:right="5dp"
                android:top="5dp"/>
            <corners android:radius="8dp"/>
        </shape>
    </item>
    <item android:state_activated="false">
        <shape>
            <stroke
                android:width="3dp"
                android:color="@color/red"/>
            <solid android:color="@color/worst"/>
            <padding
                android:bottom="8dp"
                android:left="8dp"
                android:right="8dp"
                android:top="8dp"/>
            <corners android:radius="8dp"/>
        </shape>
    </item>
</selector>